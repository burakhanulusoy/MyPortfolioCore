@model List<Category>
@{
    ViewData["Title"] = "Kategoriler";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
    int count = 0;
}

<div class="container my-4">

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="fw-bold text-primary">Kategoriler</h2>
        <a href="/Category/AddCategory" class="btn btn-success btn-lg">
            <i class="bi bi-plus-circle"></i> Yeni Kategori Ekle
        </a>
    </div>

    <div class="table-responsive shadow-sm rounded">
        <table class="table table-hover align-middle">
            <thead class="table-primary">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Kategori Adı</th>
                    <th scope="col" class="text-center">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    count++;
                    <tr>
                        <th scope="row">@count</th>
                        <td>@item.CategoryName</td>
                        <td class="text-center">
                            <a href="/Category/DeleteCategory/@item.CategoryId" class="btn btn-outline-danger btn-sm me-2">
                                <i class="bi bi-trash"></i> Sil
                            </a>
                            <a href="/Category/UpdateCategory/@item.CategoryId" class="btn btn-outline-info btn-sm">
                                <i class="bi bi-pencil-square"></i> Güncelle
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<style>
    .table-hover tbody tr:hover {
        background-color: #e3f2fd !important; /* Hover efekti */
        transform: scale(1.02);
        transition: transform 0.2s ease-in-out, background-color 0.2s ease-in-out;
    }

    .btn i {
        margin-right: 4px;
    }

    .table-responsive {
        overflow-x: auto;
    }

    .table thead th {
        border-bottom: 2px solid #0d6efd;
    }
</style>
