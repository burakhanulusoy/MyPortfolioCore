
@model About

@*
    default about component
*@


@{
    int todayYear = DateTime.Now.Year;
    int age = todayYear - Model.BitrhDate.Year;
}

<section id="about" class="about section">

    <!-- Section Title -->
    <div class="container section-title" data-aos="fade-up">
        <h2>Hakkımda</h2>
        <p>Ben Dumlupınar Üniversitesi 3. sınıf öğrencisiyim. Hem front-end hem back-end geliştirme yapıyorum ve .NET teknolojileri üzerinde çalışıyorum.</p>
    </div><!-- End Section Title -->

    <div class="container" data-aos="fade-up" data-aos-delay="100">

     
           


            




            <div class="row gy-4 justify-content-center">
                <div class="col-lg-4">
                    <img src="/images/img1.jpg" class="img-fluid" alt="Burak Han Ulusoy"  title="Burak Han"
                         style="width:400px; height:400px; object-fit:cover; border-radius:8px;">

                </div>
                <div class="col-lg-8 content">
                    <h2>@Model.Title </h2>
                    <br />
                    <div class="row">
                        <div class="col-lg-6">
                            <ul>
                                <li><i class="bi bi-chevron-right"></i> <strong>Doğum Yılı:</strong> <span>@Model.BitrhDate.ToString("dd.MM.yyyy")</span></li>
                                <li><i class="bi bi-chevron-right"></i> <strong>Website:</strong> <a href="#">@Model.WebSite</a></li>
                                <li><i class="bi bi-chevron-right"></i> <strong>Telefon:</strong> <span>@Model.Phone</span></li>
                                <li><i class="bi bi-chevron-right"></i> <strong>Şehir:</strong> <span> @Model.City</span></li>
                            </ul>
                        </div>
                        <div class="col-lg-6">
                            <ul>
                                <li><i class="bi bi-chevron-right"></i> <strong>Yaş:</strong> <span>@age</span></li>
                                <li><i class="bi bi-chevron-right"></i> <strong>Derece:</strong> <span>@Model.Graduation</span></li>
                                <li><i class="bi bi-chevron-right"></i> <strong>E-mail:</strong> <span>@Model.Email</span></li>
                                <li><i class="bi bi-chevron-right"></i> <strong>Freelance Çalışmaya Uygunluk:</strong> <span>@(Model.IsAvailable ? "Uygun" : "Uygun Değil")</span></li>
                            </ul>
                        </div>
                    </div>
                    <p class="py-3">
                        @Model.Description
                    </p>
                </div>
            </div>
        

    </div>

</section><!-- /About Section -->