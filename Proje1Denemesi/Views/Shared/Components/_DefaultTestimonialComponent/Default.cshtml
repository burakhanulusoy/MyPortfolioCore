
@model List<Testimonial>


@*
   default testimonial component view
*@
<section id="testimonials" class="testimonials section">

    <!-- Section Title -->
    <div class="container section-title" data-aos="fade-up">
        <h2>Referanslarım</h2>
        <p>Profesyonel çalışma hayatım boyunca birlikte çalıştığım yöneticilerim, ekip arkadaşlarım ve danışmanlarım tarafından iş disiplinim, sorumluluk bilincim ve gelişime açık yapım olumlu şekilde değerlendirilmiştir. Referanslarım; çalışma performansımı, ekip uyumumu ve görev bilincimi destekleyen güvenilir kişilerden oluşmaktadır. Detaylı referans bilgileri, ihtiyaç duyulması halinde paylaşılacaktır.</p>
    </div><!-- End Section Title -->

    <div class="container" data-aos="fade-up" data-aos-delay="100">

        <div class="swiper init-swiper">
            <script type="application/json" class="swiper-config">
                {
                  "loop": true,
                  "speed": 600,
                  "autoplay": {
                    "delay": 5000
                  },
                  "slidesPerView": "auto",
                  "pagination": {
                    "el": ".swiper-pagination",
                    "type": "bullets",
                    "clickable": true
                  }
                }
            </script>
            <div class="swiper-wrapper">

                @foreach(var testimonial in Model)
                {
                    <div class="swiper-slide">
                        <div class="testimonial-item">
                            <img src="@testimonial.ImageUrl" class="testimonial-img" alt="" style="width:180px ; height:200px;">
                            <h3>@testimonial.Name</h3>
                            <h4>@testimonial.Title</h4>
                            <div class="stars">
                           
                                @for(int i=0;i<testimonial.Review;i++)
                                {
                                    <i class="bi bi-star-fill"></i>
                                }

                            </div>
                            <p>
                                <i class="bi bi-quote quote-icon-left"></i>
                                <span>@testimonial.Comment.</span>
                                <i class="bi bi-quote quote-icon-right"></i>
                            </p>
                        </div>
                    </div>
                
                    <!-- End testimonial item -->
                }



            </div>
            <div class="swiper-pagination"></div>
        </div>

    </div>

</section><!-- /Testimonials Section -->