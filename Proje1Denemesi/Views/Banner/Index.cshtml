@model List<Banner>

@{
    ViewData["Title"] = "Öne Çıkanlar";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
    int count = 0;
}

<div class="table-responsive">
    <table class="table table-hover align-middle text-center">
        <thead class="table-dark">
            <tr>
                <th>#</th>
                <th>Ad Soyad</th>
                <th>Resim</th>
                <th>Başlık</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                count++;
                <tr>
                    <th>@count</th>
                    <td class="fw-bold">@item.NameSurname</td>
                    <td>
                        <div class="card mx-auto" style="width: 150px; height: 150px;">
                            <img src="@item.CoverImgUrl" class="card-img-top" style="object-fit: cover; height: 100%;" alt="@item.NameSurname" />
                        </div>
                    </td>
                    <td>@item.Title</td>
                    <td class="d-flex justify-content-center gap-2">
                        <button onclick="deleteBn(@item.BannerId)" class="btn btn-danger btn-sm">
                            <i class="bi bi-trash"></i> Sil
                        </button>
                        <a href="/Banner/UpdateBanner/@item.BannerId" class="btn btn-primary btn-sm">
                            <i class="bi bi-pencil-square"></i> Güncelle
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="text-center mt-4">
    <button onclick="addBanner()" class="btn btn-success btn-lg">
        <i class="bi bi-plus-circle"></i> Yeni Banner Ekle
    </button>
</div>

<script>
    function deleteBn(id){
        Swal.fire({
            title: "Silmek istediğinize emin misiniz?",
            text: "Bu işlemi geri alamazsınız!",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Evet, Sil!",
            cancelButtonText: "İptal"
        }).then((result) => {
            if (result.isConfirmed) {
                Swal.fire({
                    title: "Silindi!",
                    text: "İstenilen veri silindi.",
                    icon: "success",
                    timer: 1500,
                    showConfirmButton: false
                }).then(() => {
                    window.location.href = "/Banner/DeleteBanner/" + id;
                });
            }
        });
    }

    function addBanner(){
        Swal.fire({
            title: "Eklerseniz web sayfanızda gözükür, emin misiniz?",
            text: "Var olanı güncelleyebilirsiniz!",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Evet, Ekle!",
            cancelButtonText: "İptal"
        }).then((result) => {
            if (result.isConfirmed) {
                Swal.fire({
                    title: "Sayfa yükleniyor...",
                    icon: "success",
                    timer: 2000,
                    timerProgressBar: true,
                    showConfirmButton: false
                }).then(() => {
                    window.location.href = "/Banner/AddBanner";
                });
            }
        });
    }
</script>
