@model Banner
@{
    ViewData["Title"] = "UpdateBanner";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}


<form method="post">

    <input asp-for="BannerId" class="form-control" type="hidden" />


    <div class="form-group">
        <label>Ad Soyad</label>
        <input asp-for="NameSurname" class="form-control" type="text" />
        <span class="text-danger" asp-validation-for="NameSurname"></span>

    </div>

    <div class="form-group">
        <label>Resim Url'i</label>
        <input asp-for="CoverImgUrl" class="form-control" type="url" />
        <span class="text-danger" asp-validation-for="CoverImgUrl"></span>

    </div>

    <div class="form-group">
        <label>Başlık</label>
        <input asp-for="Title" class="form-control" type="text" />
        <span class="text-danger" asp-validation-for="Title"></span>

    </div>




    <button class="btn btn-outline-primary">Ekle</button>



</form>


