
@model Banner

@{
    ViewData["Title"] = "Öne Çıkan Ekle";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}



<div class="container my-5">
    <div class="card shadow-lg p-4 mx-auto" style="max-width: 600px;">
        <h3 class="mb-4 text-center">Yeni Öne Çıkan Ekle</h3>

        <form method="post">
            <div class="mb-3">
                <label class="form-label">Ad Soyad</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-person-fill"></i></span>
                    <input asp-for="NameSurname" class="form-control" placeholder="Adınızı ve Soyadınızı Girin" />
                </div>
                <span class="text-danger" asp-validation-for="NameSurname"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Resim URL</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-image"></i></span>
                    <input asp-for="CoverImgUrl" class="form-control" placeholder="https://example.com/resim.jpg" type="url" />
                </div>
                <span class="text-danger" asp-validation-for="CoverImgUrl"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Başlık</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-card-text"></i></span>
                    <input asp-for="Title" class="form-control" placeholder="Başlığı Girin" />
                </div>
                <span class="text-danger" asp-validation-for="Title"></span>
            </div>

            <div class="d-grid mt-4">
                <button type="submit" class="btn btn-primary btn-lg fw-bold">Ekle</button>
            </div>
        </form>
    </div>
</div>