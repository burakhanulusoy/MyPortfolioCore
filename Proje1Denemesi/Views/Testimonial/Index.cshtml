
@model List<Testimonial>

@{
    ViewData["Title"] = "Referanslarım";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}


<div class="container my-4">
    <div class="row g-4">
        @foreach (var testimonial in Model)
        {
            <div class="col-lg-4 col-md-6">
                <div class="testimonial-item card shadow-sm p-4 text-center h-100" style="transition: transform 0.3s, box-shadow 0.3s;">
                    <img src="@testimonial.ImageUrl" class="testimonial-img rounded-circle mx-auto mb-3 border border-2 border-primary"
                         alt="@testimonial.Name" style="width:160px; height:160px; object-fit:cover;">

                    <h4 class="fw-bold">@testimonial.Name</h4>
                    <h6 class="text-muted">@testimonial.Title</h6>

                    <div class="stars mb-3">
                        @for (int i = 0; i < @testimonial.Review; i++)
                        {
                            <i class="bi bi-star-fill text-warning"></i>
                        }
                    </div>

                    <p class="fst-italic text-secondary" style="min-height:60px;">
                        <i class="bi bi-quote quote-icon-left"></i>
                        <span>@testimonial.Comment</span>
                        <i class="bi bi-quote quote-icon-right"></i>
                    </p>

                    <div class="mt-3 d-flex justify-content-center gap-2">
                        <button onclick="deleteSk(@testimonial.TestimonialId)" class="btn btn-outline-danger btn-sm">
                            <i class="bi bi-trash"></i> Sil
                        </button>
                        <a href="/Testimonial/UpdateTestimonial/@testimonial.TestimonialId" class="btn btn-outline-primary btn-sm">
                            <i class="bi bi-pencil-square"></i> Güncelle
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="mt-4 text-center">
        <a href="/Testimonial/AddTestimonial" class="btn btn-outline-success btn-lg">
            <i class="bi bi-plus-circle"></i> Yeni Referans Ekle
        </a>
    </div>
</div>

<style>
    .testimonial-item {
        transition: transform 0.3s, box-shadow 0.3s;
    }

        .testimonial-item:hover {
            transform: translateY(-5px) scale(1.05);
            box-shadow: 0 10px 30px rgba(0,0,0,0.25);
        }

    .stars i {
        font-size: 1.3rem;
    }

    .testimonial-item .btn i {
        margin-right: 5px;
    }
</style>



<script>

    function deleteSk(id){
    Swal.fire({
      title: "Silmek istediğinize emin misiniz?",
      text: "Bu işlemi geri alamazsınız!",
      icon: "warning",
      showCancelButton: true,
      confirmButtonColor: "#3085d6",
      cancelButtonColor: "#d33",
      confirmButtonText: "Evet, Sil!",
      cancelButtonText: "İptal"
    }).then((result) => {
      if (result.isConfirmed) {
        Swal.fire({
                title: "Silindi!",
                text: "İstenilen veri silindi.",
                icon: "success",
                timer: 1500, // 1.5 saniye sonra kapanır
                showConfirmButton: false
            }).then(() => {
                window.location.href = "/Testimonial/DeleteTestimonial/" + id;
            });
      }
    });
    }





</script>