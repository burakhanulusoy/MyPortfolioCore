
@model User


@{
    ViewData["Title"] = "Profil Ekle";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}




<form method="post">


    <div class="form-group">

        <label>Ad</label>
        <input type="text" asp-for="FirstName" class="form-control" />
        <span class="text-danger" asp-validation-for="FirstName"></span>
    </div>

    <div class="form-group">

        <label>Soyad</label>
        <input type="text" asp-for="LastName" class="form-control" />
        <span class="text-danger" asp-validation-for="LastName"></span>

    </div>

    <div class="form-group">

        <label>Kullanıcı Adı</label>
        <textarea type="text" asp-for="UserName" class="form-control" rows="4"> </textarea>
        <span class="text-danger" asp-validation-for="UserName"></span>

    </div>

    <div class="form-group">

        <label>Şifre</label>
        <input type="number" asp-for="Password" class="form-control" />
        <span class="text-danger" asp-validation-for="Password"></span>

    </div>


   

    <button class="btn btn-outline-success">Kaydet</button>





</form>
